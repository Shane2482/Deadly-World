package Shane2482.DeadPlanet.handlers;

import Shane2482.DeadPlanet.gui.ContainerModFurnace;
import Shane2482.DeadPlanet.gui.GuiBasaltChest;
import Shane2482.DeadPlanet.gui.GuiPlywoodChest;
import Shane2482.DeadPlanet.gui.ModFurnaceGui;
import Shane2482.DeadPlanet.tileentity.TileEntityBasaltChest;
import Shane2482.DeadPlanet.tileentity.TileEntityModFurnace;
import Shane2482.DeadPlanet.tileentity.TileEntityPlywoodChest;
import net.minecraft.entity.player.EntityPlayer;
import net.minecraft.inventory.ContainerChest;
import net.minecraft.inventory.ContainerFurnace;
import net.minecraft.util.math.BlockPos;
import net.minecraft.world.World;
import net.minecraftforge.fml.common.network.IGuiHandler;

public class GuiHandler implements IGuiHandler {
	
	public static final int Plywood_Chest = 0;
	public static final int Basalt_Chest = 1;
	public static final int Basalt_Furnace = 2;


	@Override
	public Object getServerGuiElement(int ID, EntityPlayer player, World world, int x, int y, int z) {
		
		if(ID == Basalt_Furnace) {
			return new ContainerFurnace(player.inventory, (TileEntityModFurnace) world.getTileEntity(new BlockPos(x, y, z)));
		}
		if(ID == Plywood_Chest) {
			return new ContainerChest(player.inventory, (TileEntityPlywoodChest) world.getTileEntity(new BlockPos(x, y, z)), player);
		}
		if(ID == Basalt_Chest) {
			return new ContainerChest(player.inventory, (TileEntityBasaltChest) world.getTileEntity(new BlockPos(x, y, z)), player);
		}
		return null;
	
	}

	@Override
	public Object getClientGuiElement(int ID, EntityPlayer player, World world, int x, int y, int z) {
		
		if(ID == Basalt_Furnace) {
		return new ModFurnaceGui(player.inventory, (TileEntityModFurnace) world.getTileEntity(new BlockPos(x, y, z)));
	}
		if(ID == Plywood_Chest) {
			return new GuiPlywoodChest (player.inventory, (TileEntityPlywoodChest) world.getTileEntity(new BlockPos(x, y, z)));
		}
		if(ID == Basalt_Chest) {
			return new GuiBasaltChest (player.inventory, (TileEntityBasaltChest) world.getTileEntity(new BlockPos(x, y, z)));
		}
		return null;
	
	}

}
